<UserControl x:Class="InternshipProject.Views.TicketsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:InternshipProject.Views"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="800">
    <Grid>
        <Grid.Background>
            <LinearGradientBrush StartPoint="0.1,0" EndPoint="0.9,1">
                <GradientStop Color="#FF87C787" Offset="0"/>
                <GradientStop Color="#FF185C18" Offset="1"/>
            </LinearGradientBrush>
        </Grid.Background>

        <Border Height="285" VerticalAlignment="Top" CornerRadius="0 0 180 21" Background="FloralWhite" ></Border>
    </Grid>
</UserControl>
